<div class="field is-grouped is-pulled-right">
  <div class="control">
    <%= link_to 'Edit', edit_user_path(@user), class: 'button is-link is-light' %>
  </div>
  <div class="control">
    <%= link_to 'Back', users_path, class: 'button is-link' %>
  </div>
</div>

<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><%= link_to 'Users', users_path %></li>
    <li class="is-active"><a href="#" aria-current="page"><%= @user.full_name %></a></li>
  </ul>
</nav>

<% if notice.present? %>
  <article class="message is-info">
    <div class="message-body">
      <%= notice %>
    </div>
  </article>
<% end %>

<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= @user.full_name %></strong> <small>@<%= @user.first_name %></small> <small><%= @user.created_at %></small>
          <br>
          <%= @user.introduction %><br />
          <% if @user.references.present?  %>
            <ul>
              <% @user.references.each do |item| %>
                <li><%= item %></li>
              <% end %>
            </ul>
          <% end %>
        </p>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
          <a class="level-item" aria-label="reply" href="<%= @user.website %>" target="_blank">
            <span class="icon is-small">
              <i class="fas fa-home" aria-hidden="true"></i>
            </span>&nbsp;
            <%= @user.website %>
          </a>
        </div>
      </nav>
    </div>
  </article>
</div>

<div id="friend-list">
  <%= render partial: 'friends', locals: { friends: @friends, friends_path: @friends_path } %>
</div>
