<p id="notice"><%= notice %></p>

<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li class="is-active"><a href="#" aria-current="page">Users</a></li>
  </ul>
</nav>

<div class="columns is-multiline">
  <% @users.each do |user| %>
    <div class="column is-full-mobile is-one-third-tablet is-one-quarter-widescreen">
      <div class="card bm--card-equal-height">
        <%= link_to(user) do %>
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48">
                  <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                </figure>
              </div>
              <div class="media-content">
                <p class="title is-4"><%= user.name %></p>
                <p class="subtitle is-6">@<%= user.name %></p>
              </div>
            </div>

            <div class="content">
              <%= user.website_data_collection %>
              <br>
              <time datetime="<%= user.created_at %>"><%= user.created_at %></time>
            </div>
          </div>
        <% end %>
        <footer class="card-footer">
          <%= link_to 'Edit', edit_user_path(user), class: 'card-footer-item' %>
          <%= link_to 'Destroy', user, method: :delete, class: 'card-footer-item', data: { confirm: 'Are you sure?' } %>
        </footer>
      </div>
    </div>
  <% end %>
</div>

<p class="has-text-right">
  <%= link_to 'New User', new_user_path, class: 'button is-link' %>
</p>
